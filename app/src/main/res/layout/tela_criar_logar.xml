<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/computsal"/>

    <EditText
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:textColorHint="@color/branco"
        android:textColor="@color/branco"/>

    <EditText
        android:id="@+id/user_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Senha..."
        android:inputType="textPassword"
        android:textColorHint="@color/branco"
        android:textColor="@color/branco"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp">

        <Button
            android:id="@+id/create_acount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/secundaria"
            android:text="Create"
            android:textSize="20dp"
            android:background="@drawable/butao_pagina_inicial"
            />

        <Button
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/secundaria"
            android:text="Log In"
            android:textSize="20dp"
            android:background="@drawable/butao_pagina_inicial"
            />

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/esqueci_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secundaria"
        android:text="Esqueci minha senha"
        android:textSize="15dp"
        android:background="@drawable/butao_pagina_inicial"
        />

    <Button
        android:id="@+id/sobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secundaria"
        android:text="sobre nÃ³s..."
        android:textSize="15dp"
        android:background="@drawable/butao_pagina_inicial"
        />

</LinearLayout>